<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_sky_gradient"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:paddingHorizontal="20dp"
            android:text="@string/welcome_text"
            android:textColor="#FFD700"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/instructions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:paddingHorizontal="20dp"
            android:text="@string/instructions_text"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_below="@id/instructions_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/cover_description"
            android:elevation="1dp"
            android:rotation="-10"
            android:src="@drawable/cover" />

        <ImageView
            android:id="@+id/ar00_light_image"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_alignTop="@id/cover_image"
            android:layout_marginStart="-100dp"
            android:layout_toEndOf="@id/cover_image"
            android:contentDescription="@string/ar00_light_description"
            android:elevation="2dp"
            android:rotation="10"
            android:src="@drawable/ar00_light" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/MainActivityNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"
        tools:ignore="VisualLintBounds" />

</androidx.drawerlayout.widget.DrawerLayout>
