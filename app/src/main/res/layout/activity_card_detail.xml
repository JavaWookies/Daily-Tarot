<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3E0D7"
    tools:context=".activities.CardDetailActivity">


    <ImageView
        android:id="@+id/CardDetailActivitySingleCardImageView"
        android:layout_width="160dp"
        android:layout_height="274dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/image_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardDetailActivityCardNameTextView"
        app:srcCompat="@drawable/cover" />

    <TextView
        android:id="@+id/CardDetailActivityCardNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Card Name" />

    <ScrollView
        android:id="@+id/CardDetailActivityScrollView"
        android:layout_width="365dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardDetailActivityCardDescTitleTextView">

        <LinearLayout
            android:id="@+id/CardDetailActivityDescriptionLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CardDetailActivitySingleCardImageView">

            <TextView
                android:id="@+id/CardDetailActivityCardDescTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kalam_light"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="579dp"
                tools:text="@string/main_description" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/CardDetailActivityCardUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:text="@string/card_up"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/CardDetailActivitySingleCardImageView"
        app:layout_constraintTop_toBottomOf="@+id/CardDetailActivityCardNameTextView" />

    <TextView
        android:id="@+id/CardDetailActivityCardRevTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:text="@string/card_rev"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/CardDetailActivitySingleCardImageView"
        app:layout_constraintTop_toBottomOf="@+id/CardDetailActivityUpScrollView" />

    <TextView
        android:id="@+id/CardDetailActivityCardDescTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/description"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardDetailActivityRevScrollView" />

    <ScrollView
        android:id="@+id/CardDetailActivityUpScrollView"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/CardDetailActivitySingleCardImageView"
        app:layout_constraintTop_toBottomOf="@+id/CardDetailActivityCardUpTextView">

        <LinearLayout
            android:id="@+id/CardDetailActivityUpLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CardDetailActivityCardMeaningUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kalam_light"
                android:textSize="16sp"
                tools:text="@string/meaning_up" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/CardDetailActivityRevScrollView"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/CardDetailActivitySingleCardImageView"
        app:layout_constraintTop_toBottomOf="@+id/CardDetailActivityCardRevTextView">

        <LinearLayout
            android:id="@+id/CardDetailActivityRevLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CardDetailActivityCardMeaningRevTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kalam_light"
                android:textSize="16sp"
                tools:text="@string/meaning_down" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>