<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State (darker gray) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3A3A3A"/> <!-- Darker Gray -->
            <corners android:radius="12dp"/>
            <stroke android:color="#FFD700" android:width="2dp"/> <!-- Retaining Golden Border -->
        </shape>
    </item>
    <!-- Default State (medium gray) -->
    <item>
        <shape>
            <solid android:color="#4A4A4A"/> <!-- Medium-Dark Gray -->
            <corners android:radius="12dp"/>
            <stroke android:color="#FFD700" android:width="2dp"/> <!-- Retaining Golden Border -->
        </shape>
    </item>
</selector>
